.hotel-show-content-package.js_main_hotel_show_content_package
  - hotel.package.items_with_cover_photo.each do |item|
    .hotel-show-content-package__section.hotel-show-content-package-section
      = image_tag item.cover_photo.image.huge.url, lazy: true, class: :'hotel-show-content-package-section__image'
      .hotel-show-content-package-section__opacity.js_main_hotel_show_content_package_opacity
      .hotel-show-content-package-section__info.js_main_hotel_show_content_package_info
        table
          tr
            td
              .hotel-show-content-package-section__info-content
                span.hotel-show-content-package-section__info-banner 套餐亮点
                hr.hotel-show-content-package-section__info-hr.inline
                .hotel-show-content-package-section__info-title = item.content
                hr.hotel-show-content-package-section__info-hr
                .hotel-show-content-package-section__info-description
                  = simple_format item.description
