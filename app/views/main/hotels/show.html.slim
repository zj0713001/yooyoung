.hotel-show.js_main_hotel_show
  = render 'main/shared/main_header'
  .hotel-show__banner.hotel-show-banner.js_main_hotel_show_banner
    .hotel-show-banner__first-half.js_main_hotel_show_banner_first_half
      = image_tag "http://git-sipc.qiniudn.com/yooyoung-02.jpg", lazy: true, class: 'lazy'
    .hotel-show-banner__second-half.js_main_hotel_show_banner_second_half
      = image_tag "http://git-sipc.qiniudn.com/yooyoung-02.jpg", lazy: true, class: 'lazy'
    .hotel-show-banner__section.js_main_hotel_show_banner_section
      .hotel-show-banner-section.js_main_hotel_show_banner_section_block
        h1.hotel-show-banner-section__name
            | 香格里拉台北远东大饭店
        h2.hotel-show-banner-section__package
            | 轻奢潜水三日游
        .main-location.main-location--center
          span.iconfont.icon-location
          span.main-location__text
            | 台湾， 台北
    .hotel-show-banner__click-down.js_main_hotel_show_banner_down
      .iconfont.icon-arrow-down
