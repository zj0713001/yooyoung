            = image_tag 'http://git-sipc.qiniudn.com/yooyoung-01.jpg', lazy: true, class: :lazy, :'data-info' => 'http://git-sipc.qiniudn.com/yooyoung-01.jpghttp://git-sipc.qiniudn.com/yooyoung-01.jpghttp://git-sipc.qiniudn.com/yooyoung-01.jpghttp://git-sipc.qiniudn.com/yooyoung-01.jpghttp://git-sipc.qiniudn.com/yooyoung-01.jpg'
          .hotel-show-content-overview__image-item
            = image_tag 'http://git-sipc.qiniudn.com/yooyoung-02.jpg', lazy: true, class: :lazy, :'data-info' => 'http://git-sipc.qiniudn.com/yooyoung-02.jpghttp://git-sipc.qiniudn.com/yooyoung-02.jpghttp://git-sipc.qiniudn.com/yooyoung-02.jpghttp://git-sipc.qiniudn.com/yooyoung-02.jpghttp://git-sipc.qiniudn.com/yooyoung-02.jpg'
